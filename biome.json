{
  "$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
  "extends": ["ultracite"],
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double"
    }
  },
  "linter": {
    "rules": {
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "warn",
          "options": {
            "maxAllowedComplexity": 30
          }
        }
      },
      "nursery": {
        "noUnknownAtRule": "off"
      },
      "performance": {
        "noNamespaceImport": "off"
      }
    }
  },
  "files": {
    "includes": ["**/*", "!packages/contents/_data/quran.ts"]
  }
}
